<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_form" model="ir.ui.view">
        <field name="name">products_marking.product.form</field>
        <field name="model">products_marking.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h2>Product Form</h2>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="warehouse_form" model="ir.ui.view">
        <field name="name">products_marking.warehouse.form</field>
        <field name="model">products_marking.warehouse</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h2>Warehouse Form</h2>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company"/>
                        </group>
                        <group>
                            <field name="city"/>
                            <field name="address"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="prod_properties_change_act_form" model="ir.ui.view">
        <field name="name">prod_properties_change_act.form</field>
        <field name="model">prod_properties_change_act</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h2>Product Properties Change Act Form</h2>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="cost_or_income_ids"/>
                            <button string="Apply Act" type="object" name="apply_act" class="oe_highlight"/>
                        </group>
                        <group>
                            <field name="status"/>
                            <field name="old_warehouse_id"
                                   required="status != 'purchase'"
                                   invisible="status == 'purchase'"/>
                            <field name="new_warehouse_id"/>
                            <field name="datetime_act" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="marked_product_form" model="ir.ui.view">
        <field name="name">marked_product.form</field>
        <field name="model">products_marking.marked_product</field>
        <field name="arch" type="xml">
            <form create="false" edit="false">
                <sheet>
                    <h2>Marked Product</h2>
                    <group>
                        <group>
                            <field name="product_id" readonly="1"/>
                            <field name="last_assigned_warehouse_id" readonly="1"/>
                            <field name="last_assigned_status" readonly="1"/>
                        </group>
                        <group>
                            <field name="cost_or_income_item_ids" readonly="1"/>
                            <field name="total_cost"/>
                            <field name="total_income"/>
                            <field name="total_profit"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="products_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">products_marking.product</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product.
            </p>
        </field>
    </record>

    <record id="warehouse_action" model="ir.actions.act_window">
        <field name="name">Warehouse</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">products_marking.warehouse</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new warehouse.
            </p>
        </field>
    </record>

    <record id="prod_properties_change_act_action" model="ir.actions.act_window">
        <field name="name">Product Properties Change Act</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">prod_properties_change_act</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new Product Properties Change Act.
            </p>
        </field>
    </record>

    <record id="marked_products_action" model="ir.actions.act_window">
        <field name="name">Marked Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">products_marking.marked_product</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No marked products found.
            </p>
        </field>
    </record>


    <menuitem id="products_marking_root"
              name="Products Marking"
              sequence="10"/>

    <menuitem id="products_root"
              name="Products"
              parent="products_marking_root"
              sequence="10"/>

    <menuitem id="products_menu"
              name="Products"
              parent="products_root"
              action="products_action"
              sequence="10"/>

    <menuitem id="marked_products_menu"
              name="Marked Products"
              parent="products_root"
              action="marked_products_action"
              sequence="10"/>

    <menuitem id="warehouse_root"
              name="Warehouses"
              parent="products_marking_root"/>

    <menuitem id="warehouse_menu"
              name="Warehouses"
              parent="warehouse_root"
              action="warehouse_action"/>

    <menuitem id="documents_root"
              name="Documents"
              parent="products_marking_root"/>

    <menuitem id="prod_properties_change_act_menu"
              name="Product Properties Change Act"
              parent="documents_root"
              action="prod_properties_change_act_action"/>
</odoo>